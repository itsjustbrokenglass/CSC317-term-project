extends layout

block content
  main.profile-page
    .profile-header
      .profile-header-main
        h1.profile-title User Profile
        p.profile-subtitle View your account details, purchases, and listings.
      form.logout-form(action="/auth/logout" method="POST")
        button.logout-button(type="submit") Log Out

    if orderSuccess
      .profile-alert
        p âœ… Your order was completed successfully!

    .profile-grid
      // USER INFO
      section.profile-card
        h2.card-title Account Info
        .card-body
          dl.info-list
            dt Name
            dd= user.name
            dt Email
            dd= user.email

      // PURCHASE HISTORY
      section.profile-card
        h2.card-title Purchase History
        .card-body
          if !purchases || purchases.length === 0
            p.empty-text You haven't purchased anything yet. Browse bikes and gear to get started!
          else
            table.history-table
              thead
                tr
                  th Date
                  th Order #
                  th Item
                  th Qty
                  th Price
              tbody
                each item in purchases
                  tr
                    td= item.createdAt
                    td= item.orderId
                    td
                      a(href=`/product/${item.listingId}`)= item.name
                    td= item.quantity
                    - const price = Number(item.priceAtPurchase || 0).toFixed(2);
                    td $#{price}

      // SELLING HISTORY
      section.profile-card
        h2.card-title Selling History
        .card-body
          if !sales || sales.length === 0
            p.empty-text You haven't listed anything for sale yet.
          else
            table.history-table
              thead
                tr
                  th Date Listed
                  th Item
                  th Price
              tbody
                each s in sales
                  tr
                    td= s.createdAt
                    td
                      a(href=`/product/${s.id}`)= s.name
                    - const sPrice = Number(s.price || 0).toFixed(2);
                    td $#{sPrice}

  // Page-specific styles
  style.
    .profile-page {
      max-width: 1100px;
      margin: 0 auto;
      padding: 24px 16px 48px;
      font-family: "Josefin Sans", sans-serif;
    }

    .profile-header {
      display: flex;
      align-items: center;
      justify-content: space-between;
      gap: 12px;
      margin-bottom: 24px;
      flex-wrap: wrap;
    }

    .profile-title {
      font-size: 2rem;
      margin-bottom: 4px;
    }

    .profile-subtitle {
      font-size: 0.95rem;
      color: #4b5563;
    }

    .logout-form {
      margin-left: auto;
    }

    .logout-button {
      padding: 8px 16px;
      border-radius: 999px;
      border: 1px solid #111827;
      background: white;
      cursor: pointer;
      font-weight: 500;
    }

    .logout-button:hover {
      background: #111827;
      color: white;
    }

    .profile-alert {
      background: #ecfdf5;
      border: 1px solid #6ee7b7;
      color: #047857;
      padding: 10px 14px;
      border-radius: 10px;
      font-size: 0.9rem;
      margin-bottom: 18px;
    }

    .profile-grid {
      display: grid;
      grid-template-columns: 1.1fr 1.4fr;
      gap: 18px;
    }

    .profile-card {
      background: white;
      border-radius: 16px;
      box-shadow: 0 10px 25px rgba(15,23,42,0.08);
      padding: 16px 18px 18px;
      display: flex;
      flex-direction: column;
      min-height: 0;
    }

    .card-title {
      font-size: 1.1rem;
      margin-bottom: 10px;
    }

    .card-body {
      font-size: 0.9rem;
      overflow-x: auto;
    }

    .info-list {
      display: grid;
      grid-template-columns: max-content 1fr;
      gap: 6px 18px;
    }

    .info-list dt {
      font-weight: 600;
      color: #4b5563;
    }

    .info-list dd {
      margin: 0;
    }

    .empty-text {
      color: #6b7280;
      font-size: 0.9rem;
    }

    .history-table {
      width: 100%;
      border-collapse: collapse;
      font-size: 0.85rem;
    }

    .history-table th,
    .history-table td {
      padding: 6px 8px;
      border-bottom: 1px solid #e5e7eb;
      text-align: left;
      white-space: nowrap;
    }

    .history-table th {
      font-weight: 600;
      color: #4b5563;
      font-size: 0.8rem;
    }

    .history-table tr:hover td {
      background: #f9fafb;
    }

    .history-table a {
      color: #111827;
      text-decoration: none;
    }

    .history-table a:hover {
      text-decoration: underline;
    }

    @media (max-width: 900px) {
      .profile-grid {
        grid-template-columns: 1fr;
      }
    }

    @media (max-width: 640px) {
      .profile-page {
        padding: 16px 12px 32px;
      }

      .profile-header {
        align-items: flex-start;
      }

      .profile-title {
        font-size: 1.6rem;
      }

      .profile-card {
        padding: 14px 14px 16px;
      }
    }
