doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title= pageTitle || 'Bikes SF'
    link(rel="preconnect" href="https://fonts.googleapis.com")
    link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
    link(href="https://fonts.googleapis.com/css2?family=Josefin+Sans:wght@300;400;500;600;700&display=swap" rel="stylesheet")
    link(rel="stylesheet" href="/style.css")
    style.
      .cart-icon-wrapper { position: relative; display: inline-block; transition: transform 0.2s; }
      .cart-icon-wrapper:hover { transform: scale(1.1); }
      .cart-count { position: absolute; top: -8px; right: -8px; background: #dc2626; color: white; border-radius: 50%; min-width: 20px; height: 20px; display: flex; align-items: center; justify-content: center; font-size: 11px; font-weight: 700; border: 2px solid #f7efe7; }
      .cart-count.hidden { display: none; }
      @media (max-width: 768px) { .logo-search-cart-signin { flex-wrap: wrap; gap: 12px; } }

  body
    header.nav-bar
      .about-faq
        p.tagline Your one stop shop for used and new bike products in San Francisco!
        ul
          li: a(href="/") Home
          li: a(href="/about") About Us
          li: a(href="/faq") FAQ 
          li
            if currentUser
              a(href="/profile") User Profile
            else
              a(href="/profile") Log In/Sign Up

      .logo-search-cart-signin
        h1: a.logo-link(href="/") Bikes SF
        input#search(type="text" placeholder="Search bikes..." onkeydown="if (event.key === 'Enter') { performSearch(); }")
        ul.icon-list
          li: img.icon(src="/search.png" alt="Search" onclick="performSearch()")
          li
            a(href="/cart")
              .cart-icon-wrapper
                img.icon(src="/cart.png" alt="Cart")
                if cartCount && cartCount > 0
                  span.cart-count= cartCount
                else
                  span.cart-count.hidden 0

      nav.product-options
        ul.nav-list
          li: a(href="/buy.html") Bikes
          li: a(href="/helmets.html") Helmets
          li: a(href="/accessories.html") Accessories
          li: a(href="/parts.html") Parts
          li: a(href="/sell.html") Sell

    block content

    .footer-parent
      footer
        .footer-main
          .footer-brand: h1 Bikes SF
          .learn-more
            h2 Sell With Us
            p Sell your used parts today.
            a.learn-more-link(href="/sell.html") Learn More →
          .footer-links
            .footer-column
              h3 Resources
              ul.footer-list
                li li: a(href="/about") Our Mission
                li Bike Safety
                li: a(href="/faq") FAQ
            .footer-column
              h3 Legal
              ul.footer-list
                li Terms & Conditions
                li Privacy Policy

        .footer-bottom
          p © 2025 Bikes SF. All rights reserved.

    script.
      function performSearch() {
        var input = document.getElementById('search');
        if (!input) return;
        var query = input.value.trim();
        if (!query) return;
        window.location.href = '/search?q=' + encodeURIComponent(query);
      }

